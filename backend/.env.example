# Dream Journey Backend - .env.example
# Copy this file to `.env` and fill in the real values.

# Server Configuration
PORT=3001
ADMIN_PORT=5174
NODE_ENV=development
# Must match your frontend dev server origin
FRONTEND_URL=http://localhost:5173
# Public URL of this backend (used for email links)
BACKEND_PUBLIC_URL=http://localhost:3001
# Admin server URL
ADMIN_URL=http://localhost:5174

# Supabase Configuration (REQUIRED)
# Get these from your Supabase project settings
SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_KEY=your_service_role_key

# JWT/Session (used in some custom endpoints)
# Generate a long random string
JWT_SECRET=change_me_to_a_long_random_secret_value

# Email (REQUIRED for real confirmation emails)
# Use Gmail with 2FA + App Password or any SMTP provider
EMAIL_USER=your_gmail_address@gmail.com
EMAIL_PASSWORD=your_app_specific_password

# Admin Configuration
# Comma-separated list of admin emails (lowercase)
ADMIN_EMAILS=admin1@example.com,admin2@example.com
# Optional: override password for emails in ADMIN_EMAILS to allow admin login
# Strongly recommended to set for local/dev environments only
ADMIN_MASTER_PASSWORD=ChangeMe_Admin_Override_123!

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# AI / NLP (optional)
OPENAI_API_KEY=
GEMINI_API_KEY=
# Force specific Gemini model (recommended: gemini-2.5-pro for 22 requests/day vs gemini-2.5-flash for 6 requests/day)
GEMINI_MODEL=gemini-2.5-pro
# DeepSeek API (cheaper than OpenAI, great quality)
DEEPSEEK_API_KEY=
GOOGLE_API_KEY=
NLP_URL=http://localhost:5000

# Video Generation (optional)
RUNWAY_API_KEY=
STABILITY_API_KEY=
PIKA_API_KEY=
